# ECHO Frontend Environment Configuration
# Copy this to .env and update with your values

# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws

# Feature Flags
VITE_ENABLE_VOICE=true
VITE_ENABLE_3D=false
VITE_ENABLE_EVOLUTION=true
VITE_ENABLE_AUDIO_RECORDING=true

# UI Configuration
VITE_APP_NAME="ECHO - Evolving Cognitive Helper"
VITE_APP_TAGLINE="Your voice, amplified with intelligence"
VITE_THEME=cyberpunk

# Development
VITE_DEBUG=false
VITE_LOG_LEVEL=info

# Analytics (optional)
VITE_ANALYTICS_ID=

# External Services (optional)
VITE_SENTRY_DSN=